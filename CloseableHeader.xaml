<UserControl x:Class="NexSuite.CloseableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NexSuite"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="81" Margin="0">
    <Grid>
        <Label x:Name="Label_TabText" Content="New Tab" HorizontalAlignment="Left" VerticalAlignment="Center" Width="65" Background="#00EFEEEE" FontFamily="Verdana" BorderBrush="#FF5EA3FF" FontSize="10" Height="23" FontStretch="Expanded" FontWeight="Light" Margin="-1,0,0,0"/>
        <Button x:Name="Button_Exit" Content="×" HorizontalAlignment="Left" Margin="51,0,0,0" VerticalAlignment="Center" Height="23" Width="21" BorderThickness="0,0,0,0" Background="#00EFEEEE" BorderBrush="#FF5EA3FF" FontFamily="Verdana" FontWeight="DemiBold" FontSize="9"/>

    </Grid>
</UserControl>
